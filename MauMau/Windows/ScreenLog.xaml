<Window x:Class="MauMau.Windows.ScreenLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MauMau.Windows"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Title="Log de operações" Height="358.131" Width="317.284" KeyDown="Window_KeyDown">
    <Grid>
        <ListBox x:Name="logfield" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,31,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="btnlogclear" Content="Limpar log" HorizontalAlignment="Stretch"  Margin="224,6,10,0" VerticalAlignment="Top" Cursor="Hand" Click="btnlogclear_Click" />
    </Grid>
</Window>
