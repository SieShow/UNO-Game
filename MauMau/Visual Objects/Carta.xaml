<UserControl x:Class="MauMau.Visual_Objects.Carta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MauMau.Visual_Objects"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="114" x:Name="Card" >
    <Grid>
        <Rectangle RadiusX="20" RadiusY="10">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding ElementName=Card}"/>
            </Rectangle.Fill>
        </Rectangle>

    </Grid>
</UserControl>
